<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/mvc
	http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">
	<!-- Configure SpringMVC -->
	<!-- 1. Open SpringMVC annotation mode -->
	<!-- Simplified configurationï¼š
		(1) Automatically register DefaultAnootationHandlerMapping, AnotationMethodHandlerAdapter
		(2)Provide some columns: data binding, format of numbers and dates @NumberFormat, @DateTimeFormat, xml, json default read and write support
	-->
	<mvc:annotation-driven />
	
	<!-- 2. Static resource default servlet configuration
		(1) Add the processing of static resources: js, gif, png
		(2) Allow the use of "/" for overall mapping
	 -->
	 <mvc:default-servlet-handler/>

	<!-- 3. Configure jsp to display ViewResolver -->
	 <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	 	<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
	 	<property name="prefix" value="/viewsnew/" />
	 	<property name="suffix" value=".jsp" />
	 </bean>

	 <!-- 4. Scan web-related beans Note here, it means that the java program scans the java files in this directory when it starts, and identifies the java with annotations-->
	 <context:component-scan base-package="com.hbu.web" />
</beans>